{
  "name": "portfolio",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && simple-git-hooks",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "nuxt typecheck"
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.73",
    "@iconify-json/simple-icons": "^1.2.58",
    "@nuxt/content": "^3.8.0",
    "@nuxt/image": "^2.0.0",
    "@nuxt/scripts": "0.13.0",
    "@nuxt/test-utils": "3.20.1",
    "@nuxt/ui": "^4.1.0",
    "@unhead/vue": "^2.0.19",
    "@vueuse/nuxt": "^13.9.0",
    "better-sqlite3": "^12.4.1",
    "motion-v": "^1.7.3",
    "nuxt": "^4.2.1",
    "nuxt-og-image": "^5.1.12"
  },
  "devDependencies": {
    "@iconify-json/heroicons": "^1.2.3",
    "lint-staged": "^16.2.6",
    "oxlint": "^1.29.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "oxlint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,css,scss,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.21.0"
}
